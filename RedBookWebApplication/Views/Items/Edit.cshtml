@model RedBookWebApplication.Model.Item

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Изменение записи</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spread" class="control-label"></label>
                <input asp-for="Spread" class="form-control" />
                <span asp-validation-for="Spread" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biology" class="control-label"></label>
                <input asp-for="Biology" class="form-control" />
                <span asp-validation-for="Biology" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimitingFactors" class="control-label"></label>
                <input asp-for="LimitingFactors" class="form-control" />
                <span asp-validation-for="LimitingFactors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityMeasures" class="control-label"></label>
                <input asp-for="SecurityMeasures" class="form-control" />
                <span asp-validation-for="SecurityMeasures" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassItemId" class="control-label"></label>
                <select asp-for="ClassItemId" class="form-control" asp-items="ViewBag.ClassItemId"></select>
                <span asp-validation-for="ClassItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
